<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/bg_main_t"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40">

            <TextView
                android:id="@+id/nav_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="首页"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <FrameLayout
                android:id="@+id/fl_main_message"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/app_name"
                    android:paddingLeft="@dimen/dp2"
                    android:paddingRight="@dimen/dp2"
                    android:paddingTop="@dimen/dp2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_select_image_main_message" />

                <TextView
                    android:id="@+id/tv_main_message_dot"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="top|center"
                    android:layout_marginLeft="@dimen/dp8"
                    android:background="@drawable/ic_yellow_dot"
                    android:gravity="center"
                    android:minWidth="14dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp10"
                    android:visibility="gone"
                    tools:text="1"
                    tools:visibility="visible" />
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:paddingBottom="0dp"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp10">

            <RelativeLayout
                android:id="@+id/rl_photo"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100">


                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_main_photo_default" />

                <ImageView
                    android:layout_width="@dimen/dp80"
                    android:layout_height="@dimen/dp80"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/bg_main_photo" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@id/rl_photo"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="陈光地"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        tools:text="陈光地" />

                    <TextView
                        android:id="@+id/tv_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp15"
                        android:text="社区民警"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        tools:text="社区民警" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@mipmap/ic_main_personal_divide" />

                <TextView
                    android:id="@+id/tv_police_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:drawableLeft="@mipmap/ic_main_police_number"
                    android:drawablePadding="7dp"
                    android:textColor="@color/white_secondary"
                    android:textSize="@dimen/sp12" />

                <TextView
                    android:id="@+id/tv_police_org"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:drawableLeft="@mipmap/ic_main_company"
                    android:drawablePadding="7dp"
                    android:textColor="@color/white_secondary"
                    android:textSize="@dimen/sp12" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@mipmap/bg_main_modify_pwd"
            android:gravity="right|center"
            android:paddingBottom="@dimen/dp5"
            android:paddingRight="@dimen/dp14"
            android:paddingTop="@dimen/dp5"
            android:text="修改密码"
            android:textColor="@color/white_secondary"
            android:textSize="@dimen/sp12" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_main">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp50"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp15"
            android:background="@mipmap/bg_main_m">

            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_main_item_divide_s" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_main_cjxs"
                        style="@style/main_item_layout">

                        <ImageView
                            style="@style/main_item_iv"
                            android:src="@mipmap/ic_create_clue" />

                        <TextView
                            style="@style/main_item_tv"
                            android:text="创建线索"
                            tools:text="创建线索" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_main_dclrw"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/ll__main_dclrw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_dclrw"
                                style="@style/main_item_iv"
                                android:src="@mipmap/ic_create_clue" />

                            <TextView
                                style="@style/main_item_tv"
                                android:text="待处理任务"
                                tools:text="创建线索" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_main_task_dot"
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="-15dp"
                            android:layout_toRightOf="@id/ll__main_dclrw"
                            android:background="@mipmap/bg_main_task_dot"
                            android:gravity="center"
                            android:minWidth="14dp"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:singleLine="true"
                            android:text="22"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp10"
                            android:visibility="visible"
                            tools:text="1"
                            tools:visibility="visible" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@mipmap/ic_main_item_divide_h" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/ll_main_wdccxs"
                        style="@style/main_item_layout">


                        <ImageView
                            style="@style/main_item_iv"
                            android:src="@mipmap/ic_create_clue" />

                        <TextView
                            style="@style/main_item_tv"
                            android:text="我的存查线索"
                            tools:text="我的存查线索" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_main_pqxzgs"
                        style="@style/main_item_layout">

                        <ImageView
                            style="@style/main_item_iv"
                            android:src="@mipmap/ic_create_clue" />


                        <TextView
                            style="@style/main_item_tv"
                            android:text="片区新增公司"
                            tools:text="片区新增公司" />


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@mipmap/ic_main_item_divide_h" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/ll_main_wyclxs"
                        style="@style/main_item_layout">


                        <ImageView
                            style="@style/main_item_iv"
                            android:src="@mipmap/ic_create_clue" />

                        <TextView
                            style="@style/main_item_tv"
                            android:text="我已处理线索"
                            tools:text="我已处理线索" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_main_pqqtxs"
                        style="@style/main_item_layout">

                        <ImageView
                            style="@style/main_item_iv"
                            android:src="@mipmap/ic_create_clue" />

                        <TextView
                            style="@style/main_item_tv"
                            android:text="片区其他线索"
                            tools:text="片区其他线索" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>